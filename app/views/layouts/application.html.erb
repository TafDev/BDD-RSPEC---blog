<!DOCTYPE html>
<html>
  <head>
    <title>RspecTutorial</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <header role="banner">
	  <nav class="navbar navbar-light bg-faded">
		  <%= link_to "Blog App", root_path, class: "navbar-brand" %>
		  <ul class="nav navbar-nav float-lg-right">
			  <li class="nav-item active"><%= link_to "Authors", "#", class: "nav-link nav-item" %></li>
			  <% if user_signed_in? %>
					  <p class="navbar-text">Signed in as <%= current_user.email %></p>
			  <% end %>
			  <% unless user_signed_in? %>
					  <li class="nav-item"><%= link_to "Sign in", new_user_session_path, class: "nav-link" %></li>
					  <li class="nav-item"><%= link_to "Sign up", new_user_registration_path, class: "nav-link" %></li>
				    <li class="nav-item"><%= link_to "Signout", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
			  <% end %>
		  </ul>
	  </nav>
  </header>

  <div class="container">
	  <div class="row">
			<div class="col-md-12">
				<% flash.each do |key, message| %>
						<div class="text-center alert alert-<%= key == 'notice'? 'success':'danger' %>">
							<%= message %>
						</div>
				<% end %>
				<%= yield %>
			</div>
	  </div>
  </div>
  </body>
</html>
